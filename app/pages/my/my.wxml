<view>
  <view class="my-top">
    <image wx:if="{{userInfo && userInfo.avatarUrl}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover" mode='aspectFit'></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    <view class="edite" bindtap='bindmyeditor'>
      <text class="blockclass">编辑资料</text>
      <image class='editorimg' src='../../images/icon/editor.png' mode='aspectFit'></image>
    </view>
    <!-- <view class="edite product">
      <text class="blockclass">未担保</text>
      <image class='editorimg1' src='../../images/icon/product.png' mode='aspectFit'></image>
    </view> -->
    <text class='sign-in'>签到</text>

    <view class='user-bottom'>
      <view class='user-col'>
        <view>{{money}}</view>
        <view>余额</view>
      </view>
      <view class='user-col' data-sort="follow" bindtap='bindfollow'>
        <view>{{follow}}</view>
        <view>关注</view>
      </view>
      <view class='user-col' data-sort="fans" bindtap='bindfollow'>
        <view>{{fans}}</view>
        <view>粉丝</view>
      </view>
      <text class="user-middle">|</text>
      <text class="user-middle1">|</text>
    </view>
  </view>
